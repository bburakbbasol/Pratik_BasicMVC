@model Pratik_BasicMVC.Models.CustomerOrderViewModel

@{
    ViewData["Title"] = "Müşteri Siparişleri";
}

<h2>Müşteri Bilgileri</h2>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <td>@Model.Customer.Id</td>
    </tr>
    <tr>
        <th>Ad</th>
        <td>@Model.Customer.FirstName</td>
    </tr>
    <tr>
        <th>Soyad</th>
        <td>@Model.Customer.LastName</td>
    </tr>
    <tr>
        <th>E-Posta</th>
        <td>@Model.Customer.Email</td>
    </tr>
</table>

<h2>Siparişler</h2>

@if (Model?.Orders != null && Model.Orders.Any()) // ✅ Null kontrolü eklendi
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Sipariş ID</th>
                <th>Ürün Adı</th>
                <th>Fiyat</th>
                <th>Miktar</th>
                <th>Toplam Tutar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model.Orders) // ✅ "Order" yerine "Orders" kullanıldı
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.ProductName</td>
                    <td>@order.Price.ToString("C")</td>
                    <td>@order.Quantity</td>
                    <td>@(order.Price * order.Quantity) ₺</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Henüz sipariş bulunmamaktadır.</p>
    // ✅ Boş liste kontrolü eklendi
}
